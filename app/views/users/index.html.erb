<h3>Users</h3>
<hr/>

<table class="table table-striped">
  <thead>
    <th>User</th>
    <th>Company & Title</th>
    <th>eMail</th>
    <th>Role</th>
    <th></th>
  </thead>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.full_name, user %></td>
      <td><%= user.title %> at <%=user.company %></td>
      <td><%= mail_to user.email %></td>
      <td><%= user.role %></td>
      <td><%= link_to 'Edit', edit_user_path(user), class: 'btn' %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New user', new_user_path, class: 'btn' %>