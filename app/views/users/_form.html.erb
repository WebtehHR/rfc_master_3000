<%= simple_form_for(@user, :as => :users, :url => @post_to_path, :html => { :autocomplete => false }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-horizontal">
    <% if current_user.user_admin? %>
      <%= f.input :full_name %>
      <%= f.input :email %>
      <%= f.input :company, collection: User::COMPANIES, as: :radio_buttons %>
      <%= f.input :role, collection: User::ROLES, as: :radio_buttons %>
      <%= f.input :user_admin %>
      <%= f.input :title, collection: User::TITLES %>
    <% end %>

    <%= f.input :password, :label => "New password", :required => true, :autofocus => true %>
    <%= f.input :password_confirmation, :label => "Confirm your new password", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit" %>
  </div>
<% end %>