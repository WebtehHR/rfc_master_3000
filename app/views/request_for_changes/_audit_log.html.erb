<h2>Section 5: Audit Log</h2>
<hr/>

<% @request_for_change.versions.each_with_index do |version, idx| %>

  <h4>Version <%= idx+1 %>: <%= version.event %> by <%= User.find(version.whodunnit).name_with_description %></h4>
  <p><strong>Time: </strong> <%= version.created_at %></p>

  <table class="table table-striped table-condensed">
    <thead>
      <th>Attribute</th>
      <th>Old Value</th>
      <th>New Value</th>
    </thead>
    <tbody>
      <% version.changeset.except(:updated_at).each do |attribute, values| %>
        <tr>
          <td><%= attribute.humanize %></td>
          <td><pre><%= values.first %></pre></td>
          <td><pre><%= values.last %></pre></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <hr/>

<% end %>