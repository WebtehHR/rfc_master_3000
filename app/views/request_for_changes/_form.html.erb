<hr/>

<%= simple_form_for(@request_for_change) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <% f.with_options disabled: @request_for_change.implementation_granted? || not(@request_for_change.edited_by_requestor? || @request_for_change.edited_by_manager?) do |g| %>
      <%= render 'form_requestor', :f => g %>
    <% end %>

    <% f.with_options disabled: not(@request_for_change.edited_by_manager?) do |g| %>
      <%= render 'form_management', :f => g %>
    <% end %>

    <% f.with_options disabled: not(@request_for_change.edited_by_security_officer?) do |g| %>
      <%= render 'form_security', :f => g %>
    <% end %>

    <% f.with_options disabled: not(@request_for_change.edited_by_implementor?) do |g| %>
      <%= render 'form_implementor', :f => g %>
    <% end %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
